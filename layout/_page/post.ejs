<div class="container">
    <%# toc %>
    <%if(theme.post_toc_enable && toc(page.content).length!==0){%>
        <%- partial('_partial/toc') %>
    <%}%>

    <%# article %>
    <article class="post-wrap">
        <header class="post-header">
            <h1 class="post-title"><%= page.title %></h1>
            <% if(theme.post_meta_enable){ %>
                <div class="post-meta">
                    <% if(theme.post_author_enable && post.author){ %>
                        <span class="post-author">
                        <%- __('author') %>: <a itemprop="author" rel="author" href="https://www.twitter.com/<%- post.author %>">@<%- post.author %></a>
                        </span>
                    <% } %>

                    <% if(page.date && theme.post_date_enable){ %>
                        <span class="post-time">
                            <i class="fa-regular fa-clock"></i> <a href="<%- page.permalink %>"><%- date(page.date, theme.date_format + ', ' + theme.time_format)  %></a>
                        </span>
                    <% } %>
                    <% if(page.categories.length!==0 && theme.post_category_enable){ %>
                        <span class="post-category">
                        <%- __('category') %>:
                        <% page.categories.forEach(item=>{ %>
                            <a href="<%- url_for(item.path) %>"><%- item.name %></a>
                        <% }) %>
                        </span>
                    <% } %>
                </div>
            <% } %>
        </header>

        <div class="post-content">
            <%- page.content %>
        </div>

        <section class="post-tags">
            <div>
                <% if(page.tags.length!==0){%>
                <span><%- __('tag') %>s:</span>
                <span class="tag">
                    <% page.tags.forEach(item=>{ %>
                        <a href="<%- url_for(item.path) %>">#<%- item.name %></a>
                    <% }) %>
                </span>
                <% } %>
            </div>
            <div>
                <a href="javascript:window.history.back();"><%- __('back').toLowerCase() %></a>
                <span>· </span>
                <a href="<%- page.permalink %>">&#182;</a>
                <span>· </span>
                <a href="<%- url_for('') %>"><%- __('home').toLowerCase() %></a>
            </div>
        </section>

        <section class="post-nav">
            <% if(post.prev){ %>
                <a class="prev" rel="prev" href="<%- url_for(post.prev.path)%>"><%- post.prev.title %></a>
            <% } %>
            <% if(post.next){ %>
            <a class="next" rel="next" href="<%- url_for(post.next.path)%>"><%- post.next.title %></a>
            <% } %>
        </section>
    </article>
</div>
