.intro
  margin-top 20px
  margin-bottom 30px
  
.intro .post-content
  text-align left
  hyphens none
  overflow auto

.intro .post-wrap p:first-child , .intro h1 
  margin-top 0 !important
  margin-bottom 0 !important

.intro .post-content img
  max-width 300px
  float left
  margin-right 30px
  border-radius 5%

.intro .post-content h1
  color $emphasis-color
  font-family Poppins
  font-style normal
  font-weight 700 
  font-size 30px
  line-height: 1.3em;

.intro .post-content p
  font-family Montserrat
  font-style normal
  font-weight normal 
  font-size 24px
  line-height 1.3em
  letter-spacing -0.8px

.nickname
  font-size 2em
  font-weight normal

.intro .links
  margin 20px 0
  text-align center
  a
    margin 0 10px
    &:hover
      color $emphasis-color !important
      background-color transparent
    color $post-link-color !important
  .icon
    font-size 1.2em

