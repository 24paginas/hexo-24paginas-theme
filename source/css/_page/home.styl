.intro
  margin-top 20px
  margin-bottom 50px
  height 100%
// .intro .post-wrap
//   padding 50px
  
.intro .post-wrap p:first-child, .intro h1 
  margin-top 0 !important
  margin-bottom 0 !important
  
.intro img 
  float left

.intro .post-content
  text-align left
  hyphens none
  overflow hidden
  padding 10px
  margin 0

  img
    max-width 300px
    margin 0 30px 0 0 
    border-radius 5%

  h1
    color $emphasis-color
    font-family Poppins
    font-style normal
    font-weight 700 
    font-size 30px
    line-height: 1.3em;

  p
    font-family Montserrat
    font-style normal
    font-weight normal 
    font-size 24px
    line-height 1.3em
    letter-spacing -0.8px
  
  br
    display none

  .links
    text-align center

  p.links a.link svg    
      -webkit-transition all ease 0.4s
      -moz-transition all ease 0.4s
      -ms-transition all ease 0.4s
      -o-transition all ease 0.4s
      transition all ease 0.4s
      margin 0 10px

      &:hover
        // animation: LinkAnimation .5s infinite ease-in-out alternate
        // @keyframes LinkAnimation { 100% { transform: translateY(-10px); } }
        -webkit-transform rotate(-20deg)
        -moz-transform rotate(-20deg)
        -ms-transform rotate(-20deg)
        -o-transform rotate(-20deg)
        transform rotate(-20deg)

